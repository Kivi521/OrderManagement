<Page x:Class="OrderSystemUI.view.OrderNew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderSystemUI.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderNew">

    <Grid>
        <DataGrid x:Name = "sItem" HorizontalAlignment="Left" Height="294" Margin="0,10,0,0" VerticalAlignment="Top" Width="800">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="200"/>
                <DataGridTextColumn Header="InStock" Binding="{Binding  InStock}"  Width="200"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"  Width="200"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"  Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
